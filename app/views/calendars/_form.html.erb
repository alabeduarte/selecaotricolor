<%= form_for(@calendar) do |f| %>
  <% if @calendar.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@calendar.errors.count, "error") %> prohibited this calendar from being saved:</h2>

      <ul>
      <% @calendar.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :day, t(:day) %><br />
    <%= f.datetime_select :day, :minute_step => 30 %>
  </div>
  <%= f.hidden_field 'home_id' %>
  <div class="field">
    <%= f.label :home, t(:home) %>
	<%= f.collection_select(:home_id, @teams, :id, :name, {:prompt => true}) %>
  </div>
  <%= f.hidden_field 'away_id' %>
  <div class="field">
	<%= f.label :away, t(:away) %>
	<%= f.collection_select(:away_id, @teams, :id, :name, {:prompt => true}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
