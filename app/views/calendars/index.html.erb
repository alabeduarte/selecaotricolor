<h1>Listing calendars</h1>

<table>
  <tr>
    <th><%= t(:day) %></th>
	<th><%= t(:home) %></th>
	<th><%= t(:away) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @calendars.each do |calendar| %>
  <tr>
    <td><%= calendar.day.to_s(:day) %></td>
	<td><%= calendar.home.name %></td>
	<td><%= calendar.away.name %></td>
	<td>
		<% if can? :formations_matches, calendar %>
			<%= link_to t(:formations_sended), formations_matches_path(calendar) %>
		<% end %>
	</td>
	<td>
		<% if can? :show, calendar %>
			<%= link_to t(:show), calendar %>
		<% end %>
	</td>
    <td>
		<% if can? :edit, calendar %>
			<%= link_to t(:edit), edit_calendar_path(calendar) %>
		<% end %>
	</td>
	<td>
		<% if can? :destroy, calendar %>
			<%= link_to t(:destroy), calendar, :confirm => 'Are you sure?', :method => :delete %>
		<% end %>
	</td>
  </tr>
<% end %>
</table>

<br />

