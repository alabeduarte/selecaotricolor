<div class="title">
	<h1><%= t(:listing_calendars) %></h1>
</div>
<%= render :partial => 'formations/facebook_like' %>
<table class="zebra-striped">
  <tr>
    <th><%= t(:day) %></th>
	<th><%= t(:home) %></th>
	<th></th>
	<th><%= t(:away) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @calendars.each do |calendar| %>
  <tr>
    <td><%= calendar.day.to_s(:day) %></td>
	<td><%= image_tag("escudos/#{calendar.home.label}.png", :size => "45x45", :alt => "#{calendar.home.name}") %></td>
	<td><%= calendar %></td>
	<td><%= image_tag("escudos/#{calendar.away.label}.png", :size => "45x45", :alt => "#{calendar.away.name}") %></td>
	<td>
		<% if can? :formations_matches, calendar %>
			<% if calendar.contains_formations? %>
				<%= link_to t(:formations_sended), formations_matches_path(calendar), :class => "btn success" %>				
			<% else %>
				<%= button_tag t(:formations_sended), :class => "btn disabled success" %>
			<% end %>
			
		<% end %>
	</td>
	<td>
		<% if can? :show, calendar %>
			<%= link_to t(:show), calendar, :class => "btn" %>
		<% end %>
	</td>
    <td>
		<% if can? :edit, calendar %>
			<%= link_to t(:edit), edit_calendar_path(calendar), :class => "btn primary" %>
		<% end %>
	</td>
	<td>
		<% if can? :destroy, calendar %>
			<%= link_to t(:destroy), calendar, :confirm => t(:are_you_sure), :method => :delete, :class => "btn danger" %>
		<% end %>
	</td>
  </tr>
<% end %>
</table>
<br />

<% if can? :create, Calendar %>
	<div class="actions">
		<%= link_to t(:new_calendar), new_calendar_path, :class => "btn primary" %>
	</div>
<% end %>
