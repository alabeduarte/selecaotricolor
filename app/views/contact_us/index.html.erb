<%= form_tag('/contact_us', :method => :post, :id => 'contact_form') do |f| %> 
	<div class="welcome">
		<fieldset class="configurations">
			<div class="clearfix">
				<%= email_field_tag :email, nil, :placeholder => "Seu e-mail", :required => true, :class => 'contact_us email' %>
				<%= submit_tag "Entre em contato!", :class => "btn large primary contact_us" %>
			</div>
			<div class="clearfix">
				<%= text_area_tag :message, nil, :placeholder => "Deixe a sua mensagem aqui...", :required => true, :class => 'contact_us message' %>
			</div>
		</fieldset>
	</div>
<% end %>
<%= content_for :javascript do %>
	$('#contact_form').submit(function(){
		if ($('#email').val() && $('#message').val()) {
			return true;
		} else {
			alert('Campos Obrigat√≥rios!');
			return false;
		}
	});

<% end %>