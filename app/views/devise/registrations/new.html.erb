<% content_for :title, t(:sign_up) %>
<h1 class="subtitle"><%= t(:sign_up) %></h1>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <fieldset class="register">
	<div class="clearfix">
  		<%= f.email_field :email, :placeholder => t(:email), :required => true %>		
  	</div>

	<div class="clearfix">
  		<%= f.text_field :nickname, :placeholder => t(:nickname), :required => true %>
		
  	</div>

	<div class="clearfix">
  		<%= f.password_field :password, :placeholder => t(:password), :required => true %>		
  	</div>

	<div class="clearfix">
  		<%= f.password_field :password_confirmation, :placeholder => t(:password_confirmation), :required => true %>
  	</div>

	<div class="clearfix">
  		<%= f.submit t(:sign_up_and_agree_terms), :class => "btn primary" %>
  	</div>

  </fieldset>
<% end %>
<%= render :partial => "devise/shared/links" %>
<div class="terms-content">
	<%= render :partial => "about/terms_content" %>
</div>