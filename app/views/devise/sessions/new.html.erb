<h2><%= t(:sign_in) %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<%= devise_error_messages! %>
	<fieldset>
		<div class="clearfix">
			<div>
				<%= f.label :email %>
				<div class="input">
					<%= f.email_field :email %>
				</div>
			</div>
		</div>

		<div class="clearfix">
			<div>
				<%= f.label :password, t(:password) %>
				<div class="input">
					<%= f.password_field :password %>
				</div>
			</div>
		</div>

		<div class="clearfix">
			<div>
				<% if devise_mapping.rememberable? -%>
					<%= f.label t(:remember_me) %>
				    <div class="input">
						<%= f.check_box :remember_me %>
					</div>
				<% end %>
			</div>
		</div>

		<div class="actions">
			<%= f.submit t(:sign_in), :class => "btn small primary" %>
		</div>

	</fieldset>
<% end %>
<%= render :partial => "devise/shared/links" %>