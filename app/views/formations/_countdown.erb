<%= content_for :javascript do %>
	$(function(){
		/*
		var now = new Date("Mon, 07 May 2012 23:59:50 +0000").getTime();
		var drops_in = new Date("Mon, 08 May 2012 16:00:00 +0000").getTime();
		*/
		
		
		var now = new Date("<%= Time.now.utc.to_datetime %>").getTime();
		var drops_in = new Date("<%= Calendar.next_match.day.utc.to_datetime %>").getTime();
		
		var countdown = drops_in - now;
		var time = dateFormat(countdown, "isoDateTime", true);
		$('#counter').countdown({
	    	image: '../../assets/digits.png',
	        startTime: time
		});
	});
<% end %>