<!doctype html> 
<head>
<script type="text/javascript"> 

$( init_soccer_field );

function hiddePlayerNames() {
	var total = 23;
	for(var index = 0; index < total; index++) {
		var playerId = (index+1);
		if (isSelected(playerId)) {
			if ($('#hiddeNamesCheckbox').is(':checked')) {
				$('#playerName_' + playerId).removeClass('playerName').addClass('hiddenPlayerName');
			} else {
				$('#playerName_' + playerId).removeClass('hiddenPlayerName').addClass('playerName');
			}
		}
	}
}

</script> 
 
</head> 
<body>
	<div class="ui-body ui-body-c">
		<h1>Pronto! Você é o técnico!</h1>
	</div>
	
	<div id="notice"></div>
	
	<a href="index" 
		data-role="button" 
		data-inline="true" 
		data-theme="c" 
		class="ui-btn ui-btn-up-c ui-btn-inline ui-btn-corner-all ui-shadow">
		<span class="ui-btn-inner ui-btn-corner-all">
			<span class="ui-btn-text">Novo</span>
		</span>
	</a>
	<a onclick="send();" 
		id="sendButton"
		data-role="button" 
		data-theme="b" 
		data-inline="true" 
		class="ui-btn ui-btn-inline ui-btn-corner-all ui-shadow ui-btn-down-b ui-btn-up-b">
		<span class="ui-btn-inner ui-btn-corner-all">
			<span class="ui-btn-text">Enviar</span>
		</span>
	</a>
	
	<a href="/login" 
		style="position: relative; float: right;"
		data-role="button" 
		data-theme="b" 
		data-inline="true" 
		class="ui-btn ui-btn-inline ui-btn-corner-all ui-shadow ui-btn-down-b ui-btn-up-b">
		<span class="ui-btn-inner ui-btn-corner-all">
			<span class="ui-btn-text">Login</span>
		</span>
	</a>

    <div id="soccerField">
      <div id="player"></div>
      <div id="slot"></div>
    </div>
	<input type="checkbox" onclick="hiddePlayerNames()" id="hiddeNamesCheckbox" value="Ocultar nomes dos jogadores">Ocultar nomes dos jogadores</>

    <div id="matrix"></div>

</body> 
</html>