<script type="text/javascript"> 

$( init_soccer_field );

function hiddePlayerNames() {
	var total = 23;
	for(var index = 0; index < total; index++) {
		var playerId = (index+1);
		if (isSelected(playerId)) {
			if ($('#hiddeNamesCheckbox').is(':checked')) {
				$('#playerName_' + playerId).removeClass('playerName').addClass('hiddenPlayerName');
			} else {
				$('#playerName_' + playerId).removeClass('hiddenPlayerName').addClass('playerName');
			}
		}
	}
}

</script> 
