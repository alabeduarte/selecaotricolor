<div class="topbar formation">
	<ul>
		<li>
			Próxima partida: <strong><%= next_match.day.to_s(:day) %></strong>
		</li>
		<% if user_signed_in? %>
			<div class="formationActions">
				<%= link_to "Novo", :index, :class => "btn primary reset" %>
				<section>
					<button onclick="send();" id="send_button" name="button" class="btn danger send">Enviar</button>
				</section>
			</div>
		<% else %>
			<%= render :partial => "users/facebook_authentication" %>
			<div class="login_button">
				<%= link_to "Login direto!", "login", :class => "btn success" %>
			</div>
			<div class="register_button">
				<%= link_to "Ainda não sou cadastrado!", "registration", :class => "btn danger" %>
			</div>
		<% end %>
		<li>
			<div class="next_match_info">
				<h3><%= "#{next_match.home.name} x #{next_match.away.name}" %></h3>
			</div>
		</li>
	</ul>	
</div>

