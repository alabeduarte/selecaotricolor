<script type="text/javascript"> 

$( init_soccer_field );

function hiddePlayerNames() {
	var total = 23;
	for(var index = 0; index < total; index++) {
		var playerId = (index+1);
		if (isSelected(playerId)) {
			if ($('#hiddeNamesCheckbox').is(':checked')) {
				$('#playerName_' + playerId).removeClass('playerName').addClass('hiddenPlayerName');
			} else {
				$('#playerName_' + playerId).removeClass('hiddenPlayerName').addClass('playerName');
			}
		}
	}
}

</script> 
<a href="index" class="btn info">Novo</a>
<button onclick="send();" class="btn success">Enviar</button>

<%= form_for(@current_team) do |f| %>
	<%= f.hidden_field 'id' %>
<% end %>

<div id="soccerField">
	<div class="sidebar">
		<div id="player"></div>
	</div>
	<div id="slot"></div>
</div>
<input type="checkbox" onclick="hiddePlayerNames()" id="hiddeNamesCheckbox" value="Ocultar nomes dos jogadores">Ocultar nomes dos jogadores</>

