<h1><%= t(:listing_formations) %></h1>
<table class="zebra-striped">
  <tr>
	<th><%= t(:sended_to) %></th>
	<th><%= t(:tactical) %></th>
	<th><%= t(:created_at) %></th>
	<th><%= t(:day) %></th>
	<th><%= t(:home) %></th>
	<th><%= t(:away) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @formations.each do |formation| %>
  <tr>
	<td><%= formation.owner.nickname %></td>
	<td><%= formation.try(:tactical) %></td>
	<td><%= formation.created_at.to_s(:day) %></td>
	<td><%= formation.match.day.to_s(:day) %></td>
	<td><%= formation.match.home.name %></td>
	<td><%= formation.match.away.name %></td>
    <td><%= link_to t(:show), formation, :class => "btn" %></td>
    <td>
		<% if can? :destroy, formation %>
			<%= link_to t(:destroy), formation, :confirm => t(:are_you_sure), :method => :delete, :class => "btn error" %>
		<% end %>
	</td>
  </tr>
<% end %>
<% if @formations.empty? %>
	<tr class="empty-table">
		<th colspan="7"> <%= t(:formations_not_sended) %> </th>
	</tr>
<% end %>
</table>

<br />

<div class="actions">
	<%= link_to t(:new_formation), new_path, :class => "btn small primary" %>
</div>