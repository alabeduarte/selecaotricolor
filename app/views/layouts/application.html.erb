<!DOCTYPE html>
<html>
<head>
  <title>Seleção Tricolor!</title>
  <%= stylesheet_link_tag 'style', 'bootstrap.min', 'themes/base/jquery.ui.all' %>
  <%= csrf_meta_tag %>
  <%= favicon_link_tag %>
</head>
<body>
	<div id="dialog-message" title="Ops...">
		<p id="custom-alert-message"/>
	</div>
	<div class="topbar menu">		
		<div class="container">
			<ul class="pills">
			  <li><%= menu_link_to 'Home', :root %></li>		  
			  <li><%= menu_link_to 'Táticas enviadas', :list %></li>
			  <li><%= menu_link_to 'Jogadores', :players %></li>
			  <li><%= menu_link_to 'Times', :teams %></li>
			  <li><%= menu_link_to 'Calendário dos Jogos', :calendars %></li>
			  <li><%= menu_link_to 'Relatórios', :reports %></li>
			</ul>
		</div>
	</div>
	
	<% if user_signed_in? %>
		<div class="topbar user_info">
			<ul>
				<li class="user_info">
					<div class="btn-group">
						<a id="user_info_menu" class="btn primary dropdown-toggle" data-toggle="dropdown" href="#">
							<%= "#{current_user.nickname}" %>
							<span class="caret"></span>
						</a>
						<ul id="user_config_menu" class="dropdown-menu user_info">            				
		                	<li><%= link_to 'Configurações da sua conta', "configuration" %></li>
		                	<li><%= link_to 'Sair', "logout" %></li>
		              	</ul>
					</div>	
				</li>
			</ul>
		</div>
	<% end %>
	<div class="main">
		<% if flash[:notice] -%>
			<div id="notice" class="alert-message notice">
				<a class="close notice" onclick="dispose();">×</a>
				<%= flash[:notice] %>
			</div>
		<% end -%>
		<%= yield %>
	</div>

	<%= javascript_include_tag 'jquery-1.7.min', 'rails', 'jquery.ui.core.min', 'jquery.ui.widget.min', 'jquery.ui.mouse.min', 'jquery.ui.draggable.min', 'jquery.ui.droppable.min', 'jquery.ui.position.min', 'jquery.ui.dialog.min', 'formation'  %>
	<script type="text/javascript">
		<%= yield :javascript %>
	
		<!-- Analytics -->
		var _gaq = _gaq || [];
		  _gaq.push(['_setAccount', 'UA-28967114-1']);
		  _gaq.push(['_setDomainName', 'selecaotricolor.com.br']);
		  _gaq.push(['_trackPageview']);

		  (function() {
		    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		  })();
		<!-- -->
	
		function dispose() {
			$('#notice').toggle();
		}
		function href(uri) {
			window.open(uri, "_blank");
		}
		
		$('#user_info_menu').click(function() {
			if ($('#user_config_menu').hasClass('visible')) {				
				$('#user_config_menu').removeClass('visible');
			} else {
				$('#user_config_menu').addClass('visible');			
			}		  	
		});
		
		
	</script>
</body>
</html>
