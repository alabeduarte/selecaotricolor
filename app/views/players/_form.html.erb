<%= form_for(@player) do |f| %>
  <% if @player.errors.any? %>
    <div id="error_explanation" class="alert-message error">
      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
      <% @player.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field 'team_id' %>
  <div class="field">
	<label for="team_id">Team:</label>
	<%= f.collection_select(:team_id, Team.sort(:name), :id, :name, {:prompt => true}) %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :number %><br />
    <%= f.number_field :number %>
  </div>
  <div class="field">
	<label for="position_mapper_id">Posição:</label>
	<%= f.collection_select(:position_mapper_id, PositionMapper.all, :id, :description, {:prompt => true}) %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn" %>
  </div>
<% end %>
