<h1>Listing players</h1>
<table id="player_list" class="zebra-striped">
  <tr>
    <th class="header headerSortUp">Name</th>
    <th class="header headerSortUp">Number</th>
    <th>Time</th>
	<th>Posição</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.name %></td>
    <td><%= player.number %></td>
    <td><%= player.team.name %></td>
	<td><%= player.try(:position_mapper).try(:code) %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Player', new_player_path %>

<%= javascript_include_tag 'jquery.tablesorter.min' %>
<%= render :partial => "players/player_list_sorter" %>
