<h1>Listing players</h1>
<table id="player_list" class="zebra-striped">
  <tr>
    <th class="header headerSortUp">Name</th>
    <th class="header headerSortUp">Number</th>
    <th>Time</th>
	<th>Posição</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <%= form_for(player) do |f| %>
  <tr>
    <td><%= player.name %></td>
    <td><%= player.number %></td>
    <td><%= player.team.name %></td>
	<td><%= f.collection_select(:position_mapper_id, PositionMapper.all, :id, :description, {:prompt => true}) %></td>
	<td><%= f.submit :class => "btn" %></td>
    <td><%= link_to t(:show), player %></td>
    <td><%= link_to t(:edit), edit_player_path(player) %></td>
	<td>
		<% if can? :destroy, player %>
			<%= link_to t(:destroy), player, :confirm => 'Are you sure?', :method => :delete %>
		<% end %>
	</td>
  </tr>
  <% end %>
<% end %>
</table>

<br />

<%= link_to 'New Player', new_player_path %>

<%= javascript_include_tag 'jquery.tablesorter.min' %>
<%= render :partial => "players/player_list_sorter" %>
