<% content_for :title, "Scores" %>
<div class="title">
	<h1><%= t(:scores) %></h1>
</div>
<table class="zebra-striped">
  <tr>
	<th></th>
	<th></th>
    <th><%= t(:nickname) %></th>
    <th>Score</th>
  </tr>
<% @users.each_with_index.map do |u, index| %>
	<% index += 1 %>
	<tr>
		<td><%= ++index %></td>
		<td><%= image_tag(u.image, :size => "25x25") %></td>
    	<td><%= u.nickname %></td>
		<td><%= u.score %></td>
  	</tr>
<% end %>
</table>
