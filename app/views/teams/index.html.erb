<h1>Listing teams</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
    <td><%= link_to 'Show', team, :class => "btn" %></td>
    <td><%= link_to 'Edit', edit_team_path(team), :class => "btn primary" %></td>
	<td>
		<% if can? :destroy, team %>
			<%= link_to t(:destroy), team, :confirm => 'Are you sure?', :method => :delete, :class => "btn danger" %>
		<% end %>
	</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Team', new_team_path %>
